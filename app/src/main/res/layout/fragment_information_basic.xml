<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_basicInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <!--基本信息-->
            <TextView
                style="@style/DividerTextView"
                android:text="@string/basic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/dividerColor" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/basicTextViewTitle"
                            android:text="隐患点名称" />

                        <TextView style="@style/DividerLine2" />

                        <TextView
                            android:id="@+id/tv_dangerName"
                            style="@style/basicTextViewTitle"
                            android:layout_weight="6.5"
                            android:text="隐患点名称" />
                    </LinearLayout>

                    <TextView style="@style/DividerLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/basicTextViewTitle"
                            android:text="隐患点编号" />

                        <TextView style="@style/DividerLine2" />

                        <TextView
                            android:id="@+id/tv_dangerNum"
                            style="@style/basicTextViewTitle"
                            android:layout_weight="6.5"
                            android:text="1234567890123456" />
                    </LinearLayout>

                    <TextView style="@style/DividerLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/basicTextViewTitle"
                            android:text="隐患点类型" />

                        <TextView style="@style/DividerLine2" />

                        <TextView
                            android:id="@+id/tv_dangerType"
                            style="@style/basicTextViewTitle"
                            android:layout_weight="6.5"
                            android:text="泥石流" />
                    </LinearLayout>

                    <TextView style="@style/DividerLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/basicTextViewTitle"
                            android:text="诱因" />

                        <TextView style="@style/DividerLine2" />

                        <TextView
                            android:id="@+id/tv_cause"
                            style="@style/basicTextViewTitle"
                            android:layout_weight="6.5"
                            android:text="暴雨" />
                    </LinearLayout>

                    <TextView style="@style/DividerLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/basicTextViewTitle"
                            android:text="危害等级" />

                        <TextView style="@style/DividerLine2" />

                        <TextView
                            android:id="@+id/tv_dangerLevel"
                            style="@style/basicTextViewTitle"
                            android:layout_weight="6.5"
                            android:text="特大型" />
                    </LinearLayout>

                    <TextView style="@style/DividerLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/basicTextViewTitle"
                            android:text="发生时间" />

                        <TextView style="@style/DividerLine2" />

                        <TextView
                            android:id="@+id/tv_time"
                            style="@style/basicTextViewTitle"
                            android:layout_weight="6.5"
                            android:text="2008-01-09" />
                    </LinearLayout>

                    <TextView style="@style/DividerLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/basicTextViewTitle"
                            android:text="入库时间" />

                        <TextView style="@style/DividerLine2" />

                        <TextView
                            android:id="@+id/tv_storageTime"
                            style="@style/basicTextViewTitle"
                            android:layout_weight="6.5"
                            android:text="2013-09-01" />
                    </LinearLayout>

                    <TextView style="@style/DividerLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/basicTextViewTitle"
                            android:layout_gravity="center_vertical"
                            android:text="详细地址" />

                        <TextView style="@style/DividerLine2" />

                        <TextView
                            android:id="@+id/tv_dangerAddress"
                            style="@style/basicTextViewTitle"
                            android:layout_weight="6.5"
                            android:text="重庆市武隆区羊角乡镇" />
                    </LinearLayout>

                    <TextView style="@style/DividerLine" />
                </LinearLayout>

                <TextView style="@style/DividerLine2" />
            </LinearLayout>

            <!--灾害影响-->
            <TextView
                style="@style/DividerTextView"
                android:text="@string/disaster" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
