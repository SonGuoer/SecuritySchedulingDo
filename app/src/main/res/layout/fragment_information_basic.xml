                            android:text="坡度" />

                        <TextView style="@style/DividerLine2" />

                        <TextView
                            android:id="@+id/tv_slope"
                            style="@style/basicTextViewTitle"
                            android:layout_weight="6.5"
                            android:text="111" />
                    </LinearLayout>

                    <TextView style="@style/DividerLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
